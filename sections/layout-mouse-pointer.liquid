<style>

@media(max-width: 767px){
      .cursor{
            display: none !important;
      }   
}
body{
      width: 100%;
      height: 100%;
      overflow: clip;
      position: relative;
}
.cursor{
      width: 40px;
      height: 40px;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: {{ section.settings.cursor_background }};/* SCHEMA BACKGROUND COLOR */
      border-radius: 50%;
      position: absolute;
      z-index:99999999;
      transition-duration: 200ms;
      transition-timing-function: ease-out;
      color: {{ section.settings.icon_color }};/* SCHEMA ICON COLOR */
}

.cursor::after{
      content: "";
      width: 40px;
      height: 40px;
      top: 0px;
      left: 0px;
      position: absolute;
      border: 5px solid {{ section.settings.cursor_line }}; /* SCHEMA BORDER COLOR */
      border-radius: 50%;
      opacity: 0.5;
      animation: cursorAnimation2 1s infinite alternate;
}

@keyframes cursorAnimation{
      
      from {
            transform: scale(1);
      } to {
            transform: scale(.7);
      }
}

@keyframes cursorAnimation2{
      from{
            transform: scale(1.5);
      } to {
            transform: :scale(.2);
      }
}

@keyframes cursorAnimation3 {
      0%{
            transform: scale(2);
      } 
      
      50% {
            transform: :scale(3);
      }
      100%{
            transform: :scale(1);
            opacity: 0;
      }
}

.expand {
      animation: cursorAnimation3 .5s forwards;
      border: 2px solid {{ section.settings.click_effect }}; /* CLICK EFFECT COLOR */
}

</style>

{% if section.settings.turn_cursor == true %}
<div class="cursor">
      {{ section.settings.cursor_icon }}
</div> 


<script>
      const cursor = document.querySelector('.cursor');
      document.addEventListener('mousemove', e=>{
            cursor.setAttribute("style", "top: "+ ( e.pageY +5 )  + "px; left:" + ( e.pageX +5 ) + "px;")
      });

      document.addEventListener('click', ()=> {
            cursor.classList.add("expand");

            setTimeout(()=>{
                  cursor.classList.remove("expand");
            }, 500);
      });

</script>
{% endif %}

{% schema %}
      {
      "name": "Mouse cursor",
      "class": "shopify-section-vue",
      "settings": [
            {
            "type": "header",
            "content": "Mouse Cursor color"
            },
            {
            "type": "checkbox",
            "id": "turn_cursor",
            "default": true,
            "label": "Show mouse cursor"
            },
            {
            "type": "html",
            "id": "cursor_icon",
            "label": "Cursor Icon",
            "info":"Please copy and paste svg icon file"
            },
            {
                  "type": "color",
                  "id": "icon_color",
                  "label": "Icon color",
                  "default": "#BAA098"
            },
            {
                  "type": "color",
                  "id": "cursor_background",
                  "label": "Cursor Background",
                  "default": "#fafafa"
            },
            {
                  "type": "color",
                  "id": "cursor_line",
                  "label": "Cursor line",
                  "default": "#BAA098"
            },
            {
                  "type": "color",
                  "id": "click_effect",
                  "label": "Click effect color",
                  "default": "#BAA098"
            }
      ]
      }
{% endschema %}
