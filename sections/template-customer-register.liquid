<div class="{{section.settings.color_schema}}">
  <div class="2xl:w-[1280px] m-auto" style="padding-top:{{section.settings.padding_top}}rem; padding-bottom:{{section.settings.padding_bottom}}rem;" {% if section.settings.animation_setting == true %}data-aos="fade-in"data-aos-duration="3000"data-aos-duration="1500"{% endif %}>
    <div class="mt-10 sm:mt-0">
      <div class="mt-5 md:mt-0 md:col-span-2">
        {% form 'create_customer' %}

          {%- if form.errors -%}
            <div class="px-4 py-5 sm:p-6">
              <h2 class="form__message text-2xl py-4" tabindex="-1" autofocus>
                Please check your form again
              </h2>
              <ul>
                {%- for field in form.errors -%}
                  <li class="flex py-2" style="color: {{section.settings.font_color}};">
                    {%- if field == 'form' -%}
                      {{ form.errors.messages[field] }}
                    {%- else -%}
                      <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="red" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    {%- endif -%}
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- endif -%}

          <div class="overflow-hidden sm:rounded-md max-w-xl m-auto">
            <div class="px-4 py-5 sm:p-6">
              <div class="gap-6">
                <div class="sm:col-span-3 py-4">
                  <label for="first_name" class="block text-sm font-medium text-gray-700 tracking-widest px-2" style="color: {{section.settings.font_color}};">First name</label>
                  <input type="text" name="customer[first_name]" id="first_name" autocomplete="given-name" placeholder="First name" class="mt-1 focus:outline-none block w-full shadow-sm sm:text-sm border-gray-300" style="border:1px solid {{section.settings.form_border_color}};" required>
                </div>

                <div class="sm:col-span-3 py-4">
                  <label for="last_name" class="block text-sm font-medium text-gray-700 tracking-widest px-2" style="color: {{section.settings.font_color}};">Last name</label>
                  <input type="text" name="customer[last_name]" id="last_name" autocomplete="family-name" placeholder="Last name" class="mt-1  block focus:outline-none w-full shadow-sm sm:text-sm border-gray-300" style="border:1px solid {{section.settings.form_border_color}};">
                </div>

                <div class="sm:col-span-3 py-4">
                  <label for="email_address" class="block text-sm font-medium text-gray-700 tracking-widest px-2" style="color: {{section.settings.font_color}};">Email address</label>
                  <input type="email" name="customer[email]" id="email_address" autocomplete="email" placeholder="Email" class="mt-1 focus:outline-none block w-full shadow-sm sm:text-sm border-gray-300" style="border:1px solid {{section.settings.form_border_color}};" required>
                </div>

                <div class="sm:col-span-3 py-4">
                  <label for="password" class="block text-sm font-medium text-gray-700 tracking-widest px-2" style="color: {{section.settings.font_color}};">password</label>
                  <input type="password" name="customer[password]" id="password" autocomplete="current-password" placeholder="Password" class="mt-1 focus:outline-none block w-full shadow-sm sm:text-sm border-gray-300" aria-required="true" {% if form.errors contains 'password' %}aria-invalid="true"aria-describedby="password-error"{% endif %}placeholder="{{ 'customer.register.password' | t }}" style="border:1px solid {{section.settings.form_border_color}};" required>
                  {%- if form.errors contains 'password' -%}
                    <span id="password-error" class="form__message">
                      {{ form.errors.translated_fields['password'] | capitalize }}
                      {{ form.errors.messages['password'] }}
                      .
                    </span>
                  {%- endif -%}
                </div>

              </div>
            </div>
            <div class="flex justify-center px-10 py-5 text-right sm:px-6">
              <input type="submit" value="Create Account" class="{{section.settings.color_button}} {{section.settings.button_color_hover}} inline-flex justify-center py-2 px-4 cursor-pointer" style="border: 1px solid {{section.settings.border_color}}; color:{{section.settings.border_color}};">
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>


{% schema %}
