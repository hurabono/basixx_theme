
<div class="{{section.settings.color_schema}}">
      <section class="2xl:max-w-[1920px] m-auto"
            style="padding-top:{{section.settings.padding_top}}rem; padding-bottom:{{section.settings.padding_bottom}}rem;" 
            {% if section.settings.animation_setting == true %} data-aos="fade-up" data-aos-duration="3000" {% endif %}>
            <div class="container max-w-[1580px] mx-auto">
                  {% if section.settings.headline != blank%}
                  <div class="mx-[1.5rem]">
                        {% if section.settings.headline %}
                        <h1 class="{{section.settings.title_align}} mb-[1.2rem] text-2xl lg:text-3xl font-bold tracking-wider" style="color:{{section.settings.color_title}};">
                          {{ section.settings.headline }}
                        </h1>
                        <div class="subfont_size {{section.settings.title_align}} my-8 leading-8 tracking-wider" style="color:{{section.settings.color_sub_title}};">
                          {{ section.settings.text }}
                        </div>
                        {% endif %}
                      </div>
                  {% endif %}
      
                  <div class="lg:flex {{section.settings.img_array}} flex-col">
                        <div class="relative lg:w-2/6 text-gray-900 font-medium title-font text-2xl mb-2 overflow-hidden md:m-3">
                              <div>
                                    {%- if section.settings.image != blank -%}
                                    <img src="{{section.settings.image | img_url: 'large' }}" alt="{{section.settings.image.alt}}" class="object-cover object-center w-full h-[26rem] lg:h-[23rem] xl:h-[25rem] 2xl:h-[30rem]">
                                    {% if section.settings.overlay_set == true %}
                                    <div class="bg-gray-300 mix-blend-multiply absolute inset-0 lg:h-[23rem] xl:h-[25rem] 2xl:h-[30rem]"></div>
                                    {% endif %}
                                    <div class="{{section.settings.photo_title_align}} block absolute top-0 m-[2rem] lg:m-12">
                                          <h2 class="block py-3 font-bold tracking-widest" style=" color:{{section.settings.photo_title_color}}; font-size:{{section.settings.banner_title_font_size}}px;">{{ section.settings.photo_headline }}</h2>
                                          <span class="block text-sm leading-6 tracking-wider" style=" color:{{section.settings.photo_text_color}}; font-size:{{section.settings.banner_font_size}}px;">{{ section.settings.photo_text }}</span>
                                                
                                                {%- if section.settings.button-text != blank -%}
                                                      <div class="py-6 inline-block">
                                                      <a href="{{section.settings.button-url}}"
                                                            class="{{section.settings.color_button}} {{section.settings.button_color_hover}} text-sm md:text-base text-center outline-none transition duration-100 {{section.settings.button_size}} {% if section.settings.button_round_off == true %} button_round {% endif %}" style="border:1px solid {{section.settings.border_color}}; color:{{section.settings.border_color}};">
                                                            {{section.settings.button-text}}
                                                      </a>
                                                      </div>
                                                {% endif %}
                                    </div>
                                    {%else%}
                                        
                                          <div class="flex justify-center bg-gray-100">
                                                {{ 'image' | placeholder_svg_tag: 'opacity-20 border w-full h-[26rem] lg:h-[23rem] xl:h-[25rem] 2xl:h-[30rem] object-cover object-center' }}
                                          </div>
                                          <div class="block absolute top-0 m-[2rem] lg:m-12">
                                                <h2 class="py-3 font-bold text-black tracking-widest">{{ section.settings.photo_headline }}</h2>
                                                <span class="text-sm block text-black tracking-wider leading-6">{{ section.settings.photo_text }}</span>

                                                {%- if section.settings.button-text != blank -%}
                                                      <div class="py-6 inline-block">
                                                      <a href="{{section.settings.button-url}}"
                                                      class="{{section.settings.color_button}} {{section.settings.button_color_hover}} text-sm md:text-base text-center outline-none transition duration-100 {{section.settings.button_size}} {% if section.settings.button_round_off == true %} button_round {% endif %}" style="border:1px solid {{section.settings.border_color}}; color:{{section.settings.border_color}};">
                                                      {{section.settings.button-text}}
                                                      </a>
                                                      </div>
                                                {% endif %}
                                          </div>
                                    {% endif %}
                              </div>
                        </div>
      
                        <div class="w-full lg:w-4/6 md:h-full pl-0 md:p-3 overflow-hidden">
                              <div class="swiper-container">
                                    <div class="swiper-wrapper">                      
                                                      {% assign collection = collections[section.settings.collection_featured] %}
                                                      {% unless collection == blank %}
                                                      {% for product in collection.products limit: section.settings.collection_products_limit %}
                                                      <div class="swiper-slide">
                                                      {% render 'layout-product-slideshow', 
                                                                  product: product
                                                                  product_title: section.settings.product_title
                                                                  product_title_color: section.settings.product_title_color
                                                                  product_point_color: section.settings.product_point_color
                                                                  product_badge_color:section.settings.product_badge_color
                                                                  vendor_set:section.settings.vendor_set
                                                                   %}
                                                      </div>
                                                      {% endfor %}
                                                      {% else %}
                                                      {% for i in (1..6) %}
                                                      <div class="swiper-slide" style="background-color: white;">
                                                            {% capture placeholder %}product-{{ i }}{% endcapture %}
                                                            {{ placeholder | placeholder_svg_tag: 'border w-full lg:h-[23rem] xl:h-[25rem] 2xl:h-[30rem]' }}
                                                      </div>
                                                      {% endfor %}
                                                      {% endunless %}
                                          </div>
                                    </div>
                                    <div class="swiper-pagination_collection mt-[1rem]"></div>
                              </div>
                        </div>
                  </div>
            </div>
      </section>
</div>

