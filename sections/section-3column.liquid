<div class="{{section.settings.color_schema}}" style="padding-top:{{section.settings.padding_top}}rem; padding-bottom:{{section.settings.padding_bottom}}rem;">
  <section class="max-w-[1320px] m-auto overflow-hidden px-4 md:px-8" {% if section.settings.animation_setting == true %} data-aos="fade-up" data-aos-offset="500" {% endif %}>

    <div class="mx-auto">

      {%- comment -%} headline {%- endcomment -%}
      <div class="md:mx-[1rem] mb-[1.5rem] flex flex-col {{section.settings.text_align}}">
          <div class="Left_titlebox">
            {% if section.settings.subtitle != blank %}
                <span class="text-xs my-9 leading-8 tracking-wider" style="color:{{section.settings.color_text_title}};">
                  {{section.settings.subtitle}}
                </span>
              {% endif %}
              {% if section.settings.headline != blank %}
                <h1 class="mb-[1.2rem] text-2xl lg:text-3xl font-bold tracking-wider" style="color:{{section.settings.color_title}};">
                  {{ section.settings.headline }}
                </h1>
              {% endif %}
                <div class="subfont_size my-8 leading-8 tracking-wider" style="color:{{section.settings.color_text_title}};">
                  {{ section.settings.text }}
                 </div>  
            </div>
      </div>
    
      <div class="hidden md:grid md:grid-cols-2 lg:grid-cols-3 {{section.settings.grid_style}} gap-4">
        {% for block in section.blocks %}
        <div class="lg:flex lg:items-center w-full mb-6 sm:mb-6 relative lg:flex-col">
              {% if section.settings.image_onboarding == true %}
              <div class="block w-full lg:rounded-sm overflow-hidden justify-center {% if block.settings.image == blank %}bg-white{% endif %}" {{ block.shopify_attributes }}>
                  {% if block.settings.image != blank %}
                  <img
                    sizes="
                    (min-width: 1280px) 1500px,
                    (min-width: 1024px) 1250px,
                    (min-width: 768px) 1000px,
                    (min-width: 640px) 720px,
                    600px
                  " srcset="
                    {{ block.settings.image | img_url: '600x' }} 600w,
                    {{ block.settings.image | img_url: '720x' }} 720w,
                    {{ block.settings.image | img_url: '1000x' }} 1000w,
                    {{ block.settings.image | img_url: '1250x' }} 1250w,
                    {{ block.settings.image | img_url: '1500x' }} 1500w
                  "
                    src="{{ block.settings.image | img_url: '500x' }}"
                    alt="{{ block.settings.image.alt }}"
                    loading="lazy"
                    class="w-full object-cover object-center"
                  >
                  {% else %}
                  {{ 'image' | placeholder_svg_tag: 'w-full h-full bg-white object-cover object-center' }}
                {% endif %}
              </div>
              {% endif %} 
              <div class="w-full {{block.settings.color_box_schema}} block {{block.settings.textbox_title_align}} p-6 ">
               {% if block.settings.block_subtitle != blank %}
                <span class="block text-xs mt-4 leading-8 tracking-wider" style="color:{{block.settings.grid_color_title}};">
                  {{block.settings.block_subtitle}}
                </span>
              {% endif %}
                <h2 class="text-xl font-medium title-font tracking-widest" style="color:{{block.settings.grid_header_color_title}};">{{block.settings.headline}}</h2>
                <div class="text-sm leading-relaxed mt-2 leading-8 tracking-wider py-4" style="color:{{block.settings.grid_color_title}};">{{block.settings.grid-text}}</div>
                {%- if block.settings.button-text != blank -%}
                       <div class="py-4 inline-block">
                        <a href="{{ block.settings.button-url }}"
                              class="tracking-widest mx-2 {{block.settings.color_button}} {{block.settings.button_color_hover}} text-center outline-none transition duration-100 {{block.settings.button_size}} {% if block.settings.button_round_off == true %} button_round {% endif %}" style="border:1px solid {{block.settings.border_color}}; color:{{block.settings.border_color}};">
                              {{block.settings.button-text }}</a>
                        </div>
               {% endif %}
              </div>
          </div>
        {% endfor %}
      </div>



      {%- comment -%} mobile slide show {%- endcomment -%}
      <div class="md:hidden">
         <div class="collectionSwiper column_mySwiper overflow-hidden">
            <div class="swiper-wrapper">
               {% for block in section.blocks %}
               <div class="swiper-slide lg:flex lg:justify-center lg:items-center w-full {{section.settings.grid_style}} md:p-3 mb-6 sm:mb-6 relative lg:flex-col">
                    {% if section.settings.image_onboarding == true %}
                    <div class="h-[21rem] justify-center items-center lg:rounded-sm overflow-hidden " {{ block.shopify_attributes }}>
                        {% if block.settings.image != blank %}
                        <img
                          sizes="
                          (min-width: 1280px) 1500px,
                          (min-width: 1024px) 1250px,
                          (min-width: 768px) 1000px,
                          (min-width: 640px) 720px,
                          600px
                        " srcset="
                          {{ block.settings.image | img_url: '600x' }} 600w,
                          {{ block.settings.image | img_url: '720x' }} 720w,
                          {{ block.settings.image | img_url: '1000x' }} 1000w,
                          {{ block.settings.image | img_url: '1250x' }} 1250w,
                          {{ block.settings.image | img_url: '1500x' }} 1500w
                        "
                          src="{{ block.settings.image | img_url: '500x' }}"
                          alt="{{ block.settings.image.alt }}"
                          loading="lazy"
                          class="w-full h-full object-cover object-center"
                        >
                        {% else %}
                        {{ 'image' | placeholder_svg_tag: 'w-full h-full bg-white' }}
                      {% endif %}
                    </div>
                    {% endif %} 
                    <div class="{{block.settings.color_box_schema}} block text-center {{block.settings.textbox_title_align}} p-8 ">
                     <h2 class="text-xl font-medium title-font tracking-widest mb-6 mx-2" style="color:{{block.settings.grid_header_color_title}};">{{block.settings.headline}}</h2>
                     <div class="text-sm leading-relaxed mt-2 leading-8 tracking-wider mx-2" style="color:{{block.settings.grid_color_title}};">{{block.settings.grid-text}}</div>
                        {%- if block.settings.button-text != blank -%}
                           <div class="py-8 inline-block">
                           <a href="{{ block.settings.button-url }}"
                                 class="tracking-widest mx-2 {{block.settings.color_button}} {{block.settings.button_color_hover}} text-center outline-none transition duration-100 {{block.settings.button_size}} {% if block.settings.button_round_off == true %} button_round {% endif %}" style="border:1px solid {{block.settings.border_color}}; color:{{block.settings.border_color}};">
                                 {{block.settings.button-text }}</a>
                           </div>
                        {% endif %}
                     </div>
                </div>
              {% endfor %}
            </div>

            <div class="flex justify-between relative bottom-[165px] z-0 ">
               <div class="column_prev_button"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 arrow_color">
                 <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
               </svg>
               </div>
               <div class="column_next_button"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 arrow_color">
                 <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
               </svg>
               </div>
            </div>
            <div class="column_mySwiper_pagination relative flex justify-center" style="bottom:30px;"></div>
         </div>
      </div>
    
    </div>
  
  </section>
</div>

