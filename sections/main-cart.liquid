<div class="{{section.settings.color_schema}}" style="padding-top:{{section.settings.padding_top}}rem; padding-bottom:{{section.settings.padding_bottom}}rem;">
<div class="max-w-screen-lg px-4 md:px-8 mx-auto" {% if section.settings.animation_setting == true %} data-aos="fade-in" data-aos-duration="3000"  data-aos-duration="1500"{% endif %}>
{% if cart.item_count > 0 %}
  <form action="{{routes.cart_url}}?locale={{ request.locale.iso_code }}" method="POST" novalidate>
    <input type="hidden" name="attributes[locale]" value="{{ request.locale.iso_code }}" />
    <div class="flex flex-col gap-4 md:gap-6 mb-6 sm:mb-8">
      {% for item in cart.items %}
          <!-- product - start -->
          <div class=" {{section.settings.box_color}} flex flex-col md:flex-row overflow-hidden gap-x-4 sm:gap-y-4 lg:gap-6" style="border: 3px solid {{section.settings.border_color}};">
            <a href="{{ item.url | within: collections.all }}" class="group w-full md:w-[14rem] h-92 md:h-[18rem] block bg-gray-100 overflow-hidden relative">
              {% if item.image %}
                  <img
                     sizes="
                            (min-width: 1280px) 1500px,
                            (min-width: 1024px) 1250px,
                            (min-width: 768px) 1000px,
                            (min-width: 640px) 720px,
                            600px
                          " srcset="
                            {{ item.image | img_url: '600x' }} 600w,
                            {{ item.image | img_url: '720x' }} 720w,
                            {{ item.image | img_url: '1000x' }} 1000w,
                            {{ item.image | img_url: '1250x' }} 1250w,
                            {{ item.image | img_url: '1500x' }} 1500w
                          " src="{{ item.image | img_url: '1500x' }}" alt="{{ item.image.alt }}" loading="lazy"
                          class="w-full h-full object-cover object-center group-hover:scale-110 transition duration-200"
                        >
                {%else%}
                    {{'product-1' | placeholder_svg_tag: 'w-full h-full object-cover object-center group-hover:scale-110 transition duration-200'}}
              {% endif %}
            </a>
          
            <div class="flex flex-col justify-between flex-1 py-4 px-4">
              <div>
                {% if item.title %}
                <a href="{{ item.url | within: collection }}" class="inline-block text-lg lg:text-xl font-bold transition mb-4" style="color: {{section.settings.main_color}};"> {{ item.title }}</a>
                {%endif%}

                {% if item.options_with_values %}
                {% for option in item.options_with_values %}
                <span class="block" style="color: {{section.settings.point_color}};">{{ option.name }}: {{ option.value }}</span>
                {%endfor%}
                {%endif%}

                {%- comment -%} Extra Custom Option Code {%- endcomment -%}
                {% assign property_size = item.properties | size %}
                {% if property_size > 0 %}
                {% for p in item.properties %}
                {% unless p.last == blank %}
                <span class="block" style="color: {{section.settings.point_color}};">
                {{ p.first }}:
                {% if p.last contains '/uploads/' %}
                <a class="lightbox" href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                {% else %}
                {{ p.last }}
                </span>
                {% endif %}
                {% endunless %}
                {% endfor %}
                {% endif %}
              
            </div>
            
              <div>
                
                  <span class="block md:text-lg font-bold my-4 md:my-0" style="color: {{section.settings.main_color}};">
                  {% if section.settings.show_price == true %}
                  {{ item.price | money }}
                  {% endif %}
                  </span>
               
                
              </div>
            </div>

            
                <div class="flex flex-col items-end md:items-start gap-2 py-6 px-2">
                    <div class="qty">
                      {% if section.settings.show_quantity == true %}
                      <div class="qty_control">
                        <div class="qtycard flex items-center">
                          <span class="btnqty qtyminus icon icon-minus" style="color: {{section.settings.point_color}};">-</span>
                          <input type="text" id="updates_{{forloop.index}}" name="updates[]" value="{{item.quantity}}" min="1" class="quantity-selector quantity-input" readonly="">
                          <span class="btnqty qtyplus icon icon-plus" style="color: {{section.settings.point_color}};">+</span>
                        </div>
                      </div>
                      {% endif %}
                    </div> 
                </div>
              

    
            <div class="w-full sm:w-auto flex justify-between px-3 py-4 lg:p-6 lg:pl-0 items-baseline">


              
              
              <div class="flex flex-row md:flex-col w-full h-full justify-between items-center md:pt-2 md:ml-8 lg:ml-16" style="color: {{section.settings.main_color}};">
                <span class="block md:text-lg font-bold">

                  {% if section.settings.show_totalPrice == true %}
                  {% if item.original_line_price != item.line_price %}
                  {{ item.original_line_price | money }}
                  {% endif %}

                  <span class="md:hidden">{{ 'common.total' | t }}</span> {{ item.line_price | money }}
          
                  {% for discount in item.discounts %}
                  {{ discount.title }}
                  {% endfor %}
                  {% endif %}

                </span>
                <a href="{{ routes.cart_change_url }}?line={{forloop.index}}&quantity=0" class="text-sm font-semibold select-none px-[2rem] py-[0.5rem]" style="color: {{section.settings.symbol_color}}; background:{{section.settings.point_color}};">Delete</a>
              </div>
            </div>
          </div>
          <!-- product - end -->
      {%endfor%}

      <div class="flex flex-col items-start justify-center">
        <label for="cart_notes" class="my-1" style="color:{{section.settings.point_color}};">Cart Notes</label>
        <textarea name="note" id="cart_notes" class="w-full m-auto appearance-none focus:outline-none" cols="50" rows="5" style="border: 1px solid {{section.settings.border_color}};"></textarea>
      </div>
    </div>
    
        <!-- totals - start -->
        <div class="flex flex-col items-end gap-4">
          {%- if section.settings.price_total_show == true -%}
            <div class="{{section.settings.box_color}} w-full sm:max-w-xs p-4" style="border: 1px solid {{section.settings.border_color}};">
            <div class="space-y-1">
              <div class="flex justify-between gap-4" style="color: {{section.settings.point_color}};">
                <span>{{ 'cart.subtotal' | t }}</span>
                <span>{{ cart.total_price | money_with_currency }}</span>
              </div>
            </div>
    
            <div class="pt-4 mt-4" style="border-top: 1px solid {{section.settings.point_color}};">
              <div class="flex justify-between items-start gap-4" style="color: {{section.settings.main_color}};">
                <span class="text-lg font-bold">Total</span>
    
                <span class="flex flex-col items-end">
                  <span class="text-lg font-bold">{{ cart.total_price | money_with_currency }}</span>
                  <span class="text-sm" style="color: {{section.settings.point_color}};">
                    {% if shop.taxes_included %}
                      {{ 'common.including_tax' | t }}
                    {% else %}
                      {{ 'common.excluding_tax' | t }}
                    {% endif %}
                  </span>
                </span>
              </div>
            </div>
          </div>
          {%- endif -%}
          
          <div class="my-2 w-[100%] lg:w-[20.5%]">
            <button
            type="submit"
            name="update"
            class="w-full py-2 {{section.settings.color_button}} {{section.settings.button_color_hover}}"
            style="border: 1px solid {{section.settings.button_border_color}}; color:{{section.settings.button_border_color}};"
          >
            update
          </button>
          </div>
  
          <div class="my-2 w-[100%] lg:w-[20.5%]">
            <button
            name="checkout"
            class="w-full py-2 {{section.settings.secondary_button}} {{section.settings.secondary_button_color_hover}}"
            style="border: 1px solid {{section.settings.secondary_button_border_color}}; color:{{section.settings.secondary_button_border_color}};"
            >
            {{ 'action.checkout' | t }}
            </button>
          </div>
        </div>
        <!-- totals - end -->
      </div>

  </form>
  {% else %}
    <div class="flex flex-col justify-center items-center p-[2rem]" style="color: {{section.settings.point_color}};">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-18 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
      </svg>
      <p class="text-center py-2 text-lg" style="color: {{section.settings.main_color}};">{{ 'cart.empty_cart' | t }}</p>
    </div>

    <div class="text-center">
      <a href="{{ routes.all_products_collection_url }}" class="px-4 py-2 {{section.settings.color_button}} {{section.settings.button_color_hover}} inline-flex justify-center"
      style="border: 1px solid {{section.settings.button_border_color}}; color:{{section.settings.button_border_color}};">
        {{ 'action.continue_shopping' | t }}
      </a>
    </div>
{% endif%}
</div>

