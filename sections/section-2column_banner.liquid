{% assign image_left = section.settings.image_left %}
{% assign image_right = section.settings.image_right %}

<div class="relative lg:flex justify-center items-center md:grid-cols-2">
  <div class="h-[35rem] overflow-hidden w-full">
    {% if section.settings.image_left != blank %}
    <img sizes="
          (min-width: 1536px) 1000px,
          (min-width: 1280px) 850px,
          (min-width: 1024px) 700px,
          (min-width: 768px) 400px,
          (min-width: 640px) 500px,
          600px
        " srcset="
          {{ section.settings.image_left| img_url: '400x' }} 400w,
          {{ section.settings.image_left | img_url: '500x' }} 500w,
          {{ section.settings.image_left | img_url: '600x' }} 600w,
          {{ section.settings.image_left | img_url: '700x' }} 700w,
          {{ section.settings.image_left | img_url: '850x' }} 850w,
          {{ section.settings.image_left | img_url: '1000x' }} 1000w
        " src="{{ section.settings.image_left | img_url: '1000x' }}" alt="{{ section.settings.image_left.alt }}" loading="lazy"
      class="w-full h-full object-cover object-center">
    {% else %}
    {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover object-center' }}
    {% endif %}
  </div>

  <div class="h-[35rem] overflow-hidden w-full">
      {% if image_right != blank %}
      <img sizes="
            (min-width: 1536px) 1000px,
            (min-width: 1280px) 850px,
            (min-width: 1024px) 700px,
            (min-width: 768px) 400px,
            (min-width: 640px) 500px,
            600px
          " srcset="
            {{ image_right | img_url: '400x' }} 400w,
            {{ image_right | img_url: '500x' }} 500w,
            {{ image_right | img_url: '600x' }} 600w,
            {{ image_right | img_url: '700x' }} 700w,
            {{ image_right | img_url: '850x' }} 850w,
            {{ image_right | img_url: '1000x' }} 1000w
          " src="{{ image_right | img_url: '1000x' }}" alt="{{ image_right.alt }}" loading="lazy"
        class="w-full h-full object-cover object-center">
      {% else %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'w-full h-full object-cover object-center' }}
      {% endif %}
    </div>

    <div class="{{section.settings.textbox_color_schema}} {{section.settings.textbox_align}} absolute top-[30rem] {{section.settings.textbox_position}} p-[2rem] md:w-[32rem] flex flex-col justify-center md:p-8 z-10" {% if section.settings.animation_setting == true %} data-aos="fade-up" data-aos-duration="3000" {% endif %}>
      <h1 class="text-2xl lg:text-3xl font-bold mb-2" style="color:{{section.settings.textbox_header_color}};">
        {{ section.settings.headline }}
      </h1>
  
      <div class="my-8" style="color:{{section.settings.textbox_desc_color}};">
        {{ section.settings.text }}
      </div>
  
      <div>
      {%- if section.settings.button-text != blank -%}
         <div class="py-3 inline-block">
           <a href="{{section.settings.button-url}}"
             class="{% if section.settings.button_round_off == true %} button_round {% endif %} {{section.settings.color_button}} {{section.settings.button_color_hover}} mx-3 text-sm md:text-base text-center outline-none transition duration-100 {{section.settings.button_size}}" style="border:1px solid {{section.settings.border_color}}; color:{{section.settings.border_color}};">
             {{section.settings.button-text}}
           </a>
         </div>     
     {% endif %}

     {%- if section.settings.button-text_second != blank -%}
           <div class="py-3 inline-block">
           <a href="{{section.settings.button-url_second}}"
             class="{% if section.settings.button_round_off == true %} button_round {% endif %} {{section.settings.color_button_second}} {{section.settings.button_color_hover_second}} text-sm md:text-base text-center outline-none transition duration-100 {{section.settings.button_size}} " style="border:1px solid {{section.settings.border_color_second}}; color:{{section.settings.border_color_second}};">
             {{section.settings.button-text_second}}
           </a>
           </div>
     {% endif %} 
      </div>
      
</div>
</div>


