{% assign image = section.settings.image %}

<section id="bg-image" class="min-h-[30rem] lg:min-h-[24rem] flex items-center flex-1 flex-shrink-0 overflow-hidden relative inset-0 w-full h-full {% if section.settings.image_fixed == true %} bg-fixed	{%endif%} bg-center bg-cover object-cover no-repeat" style="background-image:url('{{ image.src | img_url: '1500x' }}'); padding-top:{{section.settings.padding_top}}rem; padding-bottom:{{section.settings.padding_bottom}}rem;" ​​​​​>
  <!-- overlay - start -->
  {% if section.settings.overlay_set == true %}
    <div class="bg-gray-300 mix-blend-multiply absolute inset-0 mix-blend-multiply"></div>
  {%endif%}
  <!-- overlay - end -->

  <!-- text start -->
  <div class="{{section.settings.textbox_color}} {{section.settings.textbox_align}} flex flex-col relative p-[1rem] lg:p-[3rem] w-[1000px] m-auto" {% if section.settings.animation_setting == true %} data-aos="fade-up"data-aos-duration="3000"data-aos-duration="1500"data-aos-duration="3000"{% endif %}>
    <div class="hero_header w-full text-4xl sm:text-5xl font-bold mb-8 md:mb-12 tracking-wider" style="color:{{section.settings.color_title}}; font-size:{{section.settings.banner_title_font_size}}px;">
      {{section.settings.headline }}
    </div>
    <div class="w-full mb-4 md:mb-8 text-lg leading-9 tracking-wider" style="color:{{section.settings.color_desciption}}; font-size:{{section.settings.banner_font_size}}px;">{{ section.settings.text }}
    </div>

    {%- if section.settings.button-text != blank -%}
      <div class="py-6 inline-block">
        <a href="{{section.settings.button-url}}" class="{{section.settings.color_button}} {{section.settings.button_color_hover}} text-sm md:text-base text-center outline-none transition duration-100 {% if section.settings.button_round_off == true %} button_round {% endif %} {{section.settings.button_size}}" style="border:1px solid {{section.settings.border_color}}; color:{{section.settings.border_color}};">
          {{section.settings.button-text}}
        </a>
      </div>
    {% endif %}
  </div>
  <!-- text end -->
</section>



