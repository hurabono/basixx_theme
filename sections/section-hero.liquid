{% style %}

  .{{ section.id }}_button_hero{
      color: {{ section.settings.button_color }};
      border: 1px solid {{ section.settings.border_colors }};
      background-color: {{ section.settings.button_bg }};
      transition:0.5s;
   }

   .{{ section.id }}_button_hero:hover{
         color: {{ section.settings.mo_button_color }};
         border:1px solid {{ section.settings.mo_border_color }};
         background-color: {{ section.settings.mo_button_bg }};
   }

{% endstyle %}

{% assign image = section.settings.image %}

<section id="bg-image" class="{{ section.settings.color_schema }} min-h-[30rem] lg:min-h-[24rem] flex items-center flex-1 flex-shrink-0 overflow-hidden relative inset-0 w-full h-full {% if section.settings.image_fixed == true %} bg-fixed	{% endif %} bg-center bg-cover object-cover no-repeat" 
        style="{% if section.settings.image %} background-image:url('{{ image.src | image_url: width: 1500 }}');{% endif %} padding-top:{{ section.settings.padding_top }}rem; padding-bottom:{{ section.settings.padding_bottom }}rem;" ​​​​​>
  <!-- overlay - start -->
  {% if section.settings.overlay_set == true %}
    <div class="bg-gray-400 mix-blend-multiply absolute inset-0"></div>
  {% endif %}
  <!-- overlay - end -->

  <!-- text start -->
  <div class="{{ section.settings.textbox_color }} {{ section.settings.textbox_align }} flex flex-col relative p-[1rem] lg:p-[3rem] w-[1000px] m-auto" {% if section.settings.animation_setting == true %} data-aos="fade-up"{% endif %}>
    {% if section.settings.subtitle != blank %}
        <span class="text-xs my-4 leading-8 tracking-wider" style="color:{{ section.settings.color_desciption }};">
          {{ section.settings.subtitle }}
        </span>
    {% endif %}
    <div class="hero_header {{ section.settings.font_style }} w-full text-4xl sm:text-5xl font-bold mb-8 md:mb-8 tracking-wider" style="color:{{ section.settings.color_title }}; font-size:{{ section.settings.banner_title_font_size }}px;">
      {{ section.settings.headline }}
    </div>

    {% if section.settings.show_line %}
        <div class="{{ section.settings.line_position }} mx-auto" style="border-color:{{ section.settings.line_border }};"></div>
    {% endif %} 
    

    <div class="w-full mb-4 md:mb-8 text-lg leading-9 tracking-wider" 
        style="color:{{ section.settings.color_desciption }}; font-size:{{ section.settings.banner_font_size }}px;">
        {{ section.settings.text }}
    </div>

    {%- if section.settings.button-text != blank -%}
      <div class="w-full pt-8 flex Right_titlebox {{ section.settings.button_align }}">
          {%- if section.settings.button-text != blank -%}
              <div class="py-2 inline-block">
                <a href="{{ section.settings.button-url }}"
                  class="{{ section.id }}_button_hero tracking-widest mx-2 text-center {{ section.settings.button_size }} {% if section.settings.button_round_off == true %} button_round {% endif %}">
                        {{ section.settings.button-text }}</a>
              </div>
            {% endif %}
      </div>
    {% endif %}
  </div>
  <!-- text end -->
</section>



