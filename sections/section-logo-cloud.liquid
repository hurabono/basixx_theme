<div class="{{section.settings.color_schema}}"  style="padding-top:{{section.settings.padding_top}}rem; padding-bottom:{{section.settings.padding_bottom}}rem;">
    <div class="container 2xl:w-[1320px] mx-auto body-font flex justify-evenly items-center flex-wrap p-8">
    <!-- logo - start -->
      {% for block in section.blocks %}
      <div class="flex justify-center text-gray-400" {% if section.settings.animation_setting == true %} data-aos="fade-in" data-aos-offset="300"{% endif %}>
            {% if block.settings.image != blank %}
                <img sizes="
                  (min-width: 1536px) 500px,
                  (min-width: 1280px) 400px,
                  (min-width: 1024px) 350px,
                  (min-width: 768px) 350px,
                  (min-width: 640px) 300px,500px"
                  srcset="
                    {{ block.settings.image | img_url: '300x' }} 300w,
                    {{ block.settings.image | img_url: '350x' }} 350w,
                    {{ block.settings.image | img_url: '400x' }} 400w,
                    {{ block.settings.image | img_url: '500x' }} 500w" 
                    src="{{ block.settings.image | img_url: '500x' }}" alt="{{ block.settings.image.alt }}" loading="lazy" class="max-w-[160px] object-center object-contain overflow-hidden mx-4">
                {% if block.settings.overlay_set == true %}
                  <div class="bg-gray-300 mix-blend-multiply absolute inset-0"></div>
                {% endif %}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'w-full sm:h-40 border bg-white' }}
            {% endif %}
      </div>
      {% endfor %}
      <!-- logo - end -->
  </div>
</div>


