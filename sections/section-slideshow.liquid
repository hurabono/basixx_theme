{% assign image = section.settings.image %}

<style>
  
.featured_slider_arrow_color{
color: {{ section.settings.arrow_icons }};
background: {{ section.settings.button_background }};
border: 1px solid {{ section.settings.arrow_border }};
transition: 0.5s;
border-radius:999px;
cursor:pointer;

}

.featured_slider_arrow_color:hover{
color:{{section.settings.arrow_icons_mouseover}};
background:{{section.settings.button_bg_mouseover}};
border: 1px solid {{section.settings.arrow_border_mouseover}};
border-radius:999px;
cursor:pointer;
}


  @media(max-width: 767px){
    .moblie-swiper{
      height:auto;
    }
  }

</style>



<section class="swiper mySwiper moblie-swiper">
      <div class="swiper-wrapper">
         {% for block in section.blocks %}
         {% case block.type %}
           {% when 'slideshow' %}
             <div class="swiper-slide" {{ block.shopify_attributes }}>

               {% render 'section-slide',
             image: block.settings.image
             subicon:block.settings.subicon
             headline: block.settings.headline
             padding_top:block.settings.padding_top
             padding_bottom:block.settings.padding_bottom
             color_title:block.settings.color_title
             color_text:block.settings.color_text
             color_schema:block.settings.color_schema
             mobile_color:block.settings.mobile_color
             text: block.settings.text
             button-url: block.settings.button-url
             button-text: block.settings.button-text
             color_button:block.settings.color_button
             button_color_hover:block.settings.button_color_hover
             border_color:block.settings.border_color
             textbox_border:block.settings.textbox_border
             textbox_position:block.settings.textbox_position
             textbox_location:block.settings.textbox_location
             overlay_set:block.settings.overlay_set
             text_align:block.settings.text_align
             button_size:block.settings.button_size
             slider_font_size:section.settings.slider_font_size
             slider_sub_size:section.settings.slider_sub_size
             animation_setting:section.settings.animation_setting
             button_round_off:block.settings.button_round_off
             iconbox1:block.settings.iconbox1
             boxtext1:block.settings.boxtext1
             iconbox2:block.settings.iconbox2
             boxtext2:block.settings.boxtext2
             iconbox3:block.settings.iconbox3
             boxtext3:block.settings.boxtext3
             %}
               

             </div>
         {% endcase %}
       {% endfor %}
      </div>
      
      <div class="swiper-pagination" style="bottom:22px;"></div>
</section>




