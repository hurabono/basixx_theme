
{% assign image = section.settings.image %}

<div
  class="{{section.settings.color_schema}} {{section.settings.banner_top_size}} {{section.settings.banner_bottom_size}} min-h-96 flex items-center flex-1 flex-shrink-0 overflow-hidden relative">
  <!-- image - start -->
  {% if image %}
  <img src="{{section.settings.image | img_url: 'master' }}" alt="{{ image.alt }}" loading="lazy"
    class="w-full h-full object-cover object-center absolute inset-0 {% if section.settings.overlay_set == true %} bg-gray-300 mix-blend-multiply {%endif%}">
  {%else%}
  {% endif %}
  <!-- image - end -->


  <!-- text start -->
  <div class="flex flex-col relative px-8 p-4 w-[1440px] m-auto {{section.settings.text_align}}">
    <h1 class="w-full py-4 text-4xl font-bold tracking-widest" style="color: {{section.settings.text_color}};"> {{ blog.title}}</h1>
    <div class="subfont_size py-8 tracking-wider leading-8" style="color: {{section.settings.text_color}};">
      {{ section.settings.description }}
    </div>
  </div>
  <!-- text end -->
</div>


{% schema %}
{
"name": "Page Banner",
"settings": [
{
   "type": "header",
   "content": "Banner General",
   "info": "Setting banner image, base color and size"
},
{
   "type":"select",
   "id":"color_schema",
   "label":"Background color",
   "options":[
      {
         "value":"first_color",
         "label":"First Color"
      },
      {
         "value":"second_color",
         "label":"Second Color"
      },
      {
         "value":"third_color",
         "label":"Third Color"
      },
      {
       "value":"forth_color",
       "label":"Forth Color"
     },
     {
       "value":"fifth_color",
       "label":"Fifth Color"
     },
     {
       "value":"background_transparent",
       "label":"Transparent Color"
     }
   ],
   "default":"third_color"
  },
{
"type": "image_picker",
"id": "image",
"label": "Default product image (optional)"
},
{
  "type":"select",
  "id":"banner_top_size",
  "label":"Banner Top size",
  "options":[
     {
        "value":"banner_top_small",
        "label":"Small"
     },
     {
        "value":"banner_top_medium",
        "label":"Medium"
     },
     {
        "value":"banner_top_large",
        "label":"Large"
     },
     {
        "value":"banner_top_xlarge",
        "label":"xLarge"
     }
  ],
  "default":"banner_top_large"
},
{
  "type":"select",
  "id":"banner_bottom_size",
  "label":"Banner Bottom size",
  "options":[
     {
        "value":"banner_bottom_small",
        "label":"Small"
     },
     {
        "value":"banner_bottom_medium",
        "label":"Medium"
     },
     {
        "value":"banner_bottom_large",
        "label":"Large"
     },
     {
        "value":"banner_bottom_xlarge",
        "label":"xLarge"
     }
  ],
  "default":"banner_bottom_small"
},
{
  "type": "checkbox",
  "id": "overlay_set",
  "default": true,
  "label": "Overlay cover"
},
{
   "type": "header",
   "content": "Banner Content",
   "info": "Setting banner text and color"
 },
 {
   "type":"select",
   "id":"text_align",
   "label":"Text align",
   "options":[
      {
         "value":"font_left",
         "label":"Left"
      },
      {
         "value":"font_right",
         "label":"Right"
      },
      {
         "value":"font_center",
         "label":"Center"
      }
   ],
   "default":"font_center"
 },
{
  "type": "richtext",
  "id": "description",
  "label": "Description"
},
{
  "type": "color",
  "id": "text_color",
  "label": "Text box color",
  "default": "#fff"
}
]
}
{% endschema %}