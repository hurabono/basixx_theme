{% style %}
  .{{ section.id }}_button_first{
      color: {{ section.settings.button_color }};
      border: 1px solid {{ section.settings.border_colors }};
      background-color: {{ section.settings.button_bg }};
      transition:0.5s;
   }

   .{{ section.id }}_button_first:hover{
         color: {{ section.settings.mo_button_color}};
         border:1px solid {{ section.settings.mo_border_color }};
         background-color: {{ section.settings.mo_button_bg }};
   }


   .{{ section.id }}_button_second{
      color: {{ section.settings.button_color2 }};
      border: 1px solid {{ section.settings.border_colors2 }};
      background-color: {{ section.settings.button_bg2 }};
      transition:0.5s;
   }

   .{{ section.id }}_button_second:hover{
         color: {{ section.settings.mo_button_color2}};
         border:1px solid {{ section.settings.mo_border_color2 }};
         background-color: {{ section.settings.mo_button_bg2 }};
   }

{% endstyle %}



<section class="{{section.settings.color_schema}}">

  <!-- text start -->
  <div class="xl:max-w-[1320px] px-4 md:px-8 mx-auto"
            style="padding-top:{{section.settings.padding_top}}rem; padding-bottom:{{section.settings.padding_bottom}}rem;" 
            {% if section.settings.animation_setting == true %} data-aos="fade-up" data-aos-offset="300" {% endif %}>
    <div {% if section.settings.animation_setting == true %}data-aos="fade-up" data-aos-offset="300"{% endif %} class="mx-[1.5rem] {{section.settings.textbox_align}}">

      {% if section.settings.subtitle != blank %}
        <span class="text-xs leading-8 tracking-wider block" style="color:{{section.settings.color_desciption}};">
          {{section.settings.subtitle}}
        </span>
    {% endif %}

      <div class="richtext_font {{section.settings.title_align}} mb-[1.2rem] font-bold tracking-wider block" style="color:{{section.settings.color_title}}; font-size:{{section.settings.banner_title_font_size}}px;">
        {{ section.settings.headline }}
      </div>

      {% if section.settings.show_line %}
      <div class="{{ section.settings.line_position }} mx-auto" style="border-color:{{section.settings.line_border}};"></div>
    {% endif %}

      <div class="{{section.settings.title_align}} mt-10 mb-4 leading-8 tracking-wider font-light" style="color:{{section.settings.color_desciption}}; font-size:{{section.settings.banner_font_size}}px;">
        {{ section.settings.text }}
      </div>

      <div>
      {%- if section.settings.button-text != blank -%}
         <div class="py-3 inline-block mx-3">
              <div class="py-2 inline-block">
                  <a href="{{ section.settings.button-url }}"
                    class="{{ section.id }}_button_first tracking-widest mx-2 text-center {{section.settings.button_size}} {% if section.settings.button_round_off == true %} button_round {% endif %}" >
                    {{section.settings.button-text }}</a>
              </div>
         </div>     
      {% endif %}

      {%- if section.settings.button-text_second != blank -%}
            <div class="py-3 inline-block mx-3">
                <div class="py-2 inline-block">
                    <a href="{{ section.settings.button-url_second }}"
                      class="{{ section.id }}_button_second tracking-widest mx-2 text-center {{section.settings.button_size}} {% if section.settings.button_round_off == true %} button_round {% endif %}" >
                      {{section.settings.button-text_second }}</a>
                </div>
            </div>
      {% endif %} 
      </div>
    </div>
  </div>
  <!-- text end -->

</section>


