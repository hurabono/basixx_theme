      "id": "text",
      "label": "t:common.headline",
      "default": "<p>Lorem ipsum dolor sit amet. Vel corporis aliquid hic </p><p>tempora omnis est sunt enim ut voluptatem commodi id eius distinctio qui unde enim.</p>"
    },
    {
      "type": "select",
      "id": "title_text_align",
      "label": "Text align",
      "options": [
        {
          "value": "font_left",
          "label": "Left"
        },
        {
          "value": "font_right",
          "label": "Right"
        },
        {
          "value": "font_center",
          "label": "Center"
        }
