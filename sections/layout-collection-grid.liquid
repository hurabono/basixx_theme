
<!-- collaction grid -->
<div id="bg-image" class="{{ section.settings.color_schema }}" 
      style="{% if section.settings.image %} background-image:url('{{ section.settings.image.src | image_url }}'); background-size: cover; background-position: center; {% endif %} padding-top:{{ section.settings.padding_top }}rem; padding-bottom:{{ section.settings.padding_bottom }}rem;">
      
      {%- comment -%} headline {%- endcomment -%}
      <div class="xl:max-w-[1320px] mx-auto md:px-[2rem] mb-[1.5rem] flex flex-col {{ section.settings.title_text_align }}">
          <div class="Left_titlebox">
              {% if section.settings.subtitle != blank %}
                <span class="text-xs my-9 leading-8 tracking-wider" style="color:{{ section.settings.color_text_title }};">
                  {{ section.settings.subtitle }}
                </span>
              {% endif %}
              {% if section.settings.headline != blank %}
                <h1 class="mb-[1.2rem] text-2xl lg:text-3xl font-bold tracking-wider" style="color:{{ section.settings.color_title }};">
                  {{ section.settings.headline }}
                </h1>
              {% endif %}
                <div class="subfont_size my-8 leading-8 tracking-wider" style="color:{{ section.settings.color_text_title }};">
                  {{ section.settings.text }}
                 </div>  
            </div>
      </div>
      
      <div class="hidden xl:max-w-[1320px] mx-auto sm:grid  md:grid-cols-2 lg:grid-cols-3 {{ section.settings.column_design }} gap-4 md:gap-6 px-4 md:px-8 mx-auto" {% if section.settings.animation_setting == true %} data-aos="fade-up"{% endif %}>
      
      {% for block in section.blocks %}
          <!-- product - start -->
      <div class="{% if section.settings.image_round == true %} rounded-t-full {% endif %} overflow-hidden">
        {% if block.settings.collection.image != blank %}
            <a href="{{ block.settings.collection.url }}" class="group h-[25rem] flex justify-center items-end bg-gray-100 overflow-hidden relative p-4">
              <img
                     srcset="
                    {%- if block.settings.collection.image.width >= 550 -%}{{ block.settings.collection.image | image_url: width: 550 }} 550w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 720 -%}{{ block.settings.collection.image | image_url: width: 720 }} 720w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 990 -%}{{ block.settings.collection.image | image_url: width: 990 }} 990w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 1100 -%}{{ block.settings.collection.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 1500 -%}{{ block.settings.collection.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 2200 -%}{{ block.settings.collection.image | image_url: width: 2200 }} 2200w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 3000 -%}{{ block.settings.collection.image | image_url: width: 3000 }} 3000w,{%- endif -%}
                    {{ block.settings.collection.image | image_url }} {{ block.settings.collection.image.width }}w"
                    src="{{ block.settings.collection.image | image_url: width: 1500 }}"
                    sizes="(min-width: {{ block.settings.collection.image.width }}px) {% if  block.settings.collection.image.size == 1 %}calc({{ block.settings.collection.image.width }}px - 100px){% else %}{{ block.settings.collection.image.width | minus: 100 | times: 0.67 | round }}px{% endif %}, (min-width: 750px){% if  block.settings.collection.image.size == 1 %} calc(100vw - 100px){% else %} 500px{% endif %}, calc(100vw - 30px)"
                    alt="{{ block.settings.collection.image.alt | escape }}"
                    loading="lazy"
                    width="{{ block.settings.collection.image.width }}"
                    height="{{ block.settings.collection.image.height }}"
                    class="w-full h-full object-cover object-center absolute inset-0 group-hover:scale-110 transition duration-200 rounded-sm"

            > 

            <!-- overlay - start -->
            {% if block.settings.overlay_set == true %}
            <div class="bg-gray-300 mix-blend-multiply absolute inset-0 rounded-sm"></div>
            {% endif %}
            <!-- overlay - end -->

              <div class="flex flex-col {{ section.settings.textbox_position }} {{ section.settings.text_align }} relative p-4
              " style="width:100%; justify-content:center;">
                <span class="px-2 py-3 font-bold {{ section.settings.color_textbox }} {% if section.settings.rounded_nametag == true %} rounded_tag {% endif %}" style="font-size:{{ section.settings.font_size }}rem; color:{{ block.settings.color_collection_title }};">{{ block.settings.collection.title | escape }}</span>
              </div>
            </a>
        <!-- product - end -->
        {% else %}
                 {{ 'collection-1' | placeholder_svg_tag: 'w-full h-full bg-white object-cover object-center' }}
        {% endif %}
      </div>
      {% endfor %}
      </div>



      <!-- mobile slide mode-->
        <div class="sm:hidden">
          <div class="collectionSwiper collection_mySwiper overflow-hidden sm:grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-4 gap-y-8  text-center py-10 mx-4">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                {% if block.settings.collection.image != blank %}
                  <div class="swiper-slide" data-section-id="{{ section.id }}" {{ block.shopify_attributes }}>
                    <a href="{{ block.settings.collection.url }}" class=" rounded-sm h-[27rem] flex justify-center items-end bg-gray-100 overflow-hidden relative p-4">
                    <img
                    srcset="
                    {%- if block.settings.collection.image.width >= 550 -%}{{ block.settings.collection.image | image_url: width: 550 }} 550w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 720 -%}{{ block.settings.collection.image | image_url: width: 720 }} 720w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 990 -%}{{ block.settings.collection.image | image_url: width: 990 }} 990w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 1100 -%}{{ block.settings.collection.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 1500 -%}{{ block.settings.collection.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 2200 -%}{{ block.settings.collection.image | image_url: width: 2200 }} 2200w,{%- endif -%}
                    {%- if block.settings.collection.image.width >= 3000 -%}{{ block.settings.collection.image | image_url: width: 3000 }} 3000w,{%- endif -%}
                    {{ block.settings.collection.image | image_url }} {{ block.settings.collection.image.width }}w"
                    src="{{ block.settings.collection.image | image_url: width: 1500 }}"
                    sizes="(min-width: {{ block.settings.collection.image.width }}px) {% if  block.settings.collection.image.size == 1 %}calc({{ block.settings.collection.image.width }}px - 100px){% else %}{{ block.settings.collection.image.width | minus: 100 | times: 0.67 | round }}px{% endif %}, (min-width: 750px){% if  block.settings.collection.image.size == 1 %} calc(100vw - 100px){% else %} 500px{% endif %}, calc(100vw - 30px)"
                    alt="{{ block.settings.collection.image.alt | escape }}"
                    loading="lazy"
                    width="{{ block.settings.collection.image.width }}"
                    height="{{ block.settings.collection.image.height }}"
                    class="w-full h-full object-cover object-center absolute inset-0"
                    
                  >  
                    <div class="w-full flex flex-col {{ section.settings.color_textbox }} {{ section.settings.textbox_position }} {{ section.settings.text_align }} relative p-4
                    {% if section.settings.rounded_nametag == true %} rounded_tag {% endif %}">
                      <span class="font-bold" style="font-size:{{ section.settings.font_size }}rem; color:{{ block.settings.color_collection_title }};">{{ block.settings.collection.title | escape }}</span>
                    </div>
                  </a>
                    
                  </div>
                {% else %}

                  <div class="swiper-slide" data-section-id="{{ section.id }}" {{ block.shopify_attributes }}>
                    {{ 'product-1' | placeholder_svg_tag: 'border bject-cover object-center rounded-t-full bg-white' }}
                  </div>

                {% endif %}
              {% endfor %}
            </div>
            
            <div class="collection_swiper-pagination-list" style="margin-top:1rem;"></div>
          </div>
        </div>
</div>



{% schema %}
{
  "name": "Featured Collection List",
  "class": "shopify-section-vue",
  "settings": [
    {
      "type": "header",
      "content": "Section Title Settings",
      "info": "Setting section title and description"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "subtitle",
      "default": "Subtitle"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "t:common.headline",
      "default": "Our store"
    },
    {
