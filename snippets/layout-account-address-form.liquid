    class="block customer_text_color tracking-wider"
  >
    {{ 'form.zip_code' | t }}*
  </label>

  <input
    type="text" 
    name="address[zip]" 
    id="AddressZip_{{ form.id }}"
    value="{{ form.zip }}"
    class="w-full focus:outline-none customer_border_color"
    required
  >
</div>

<div class="mb-6 sm:mb-10">
  <label
    for="AddressPhone_{{ form.id }}"
    class="block customer_text_color tracking-wider"
  >
    {{ 'form.phone' | t }}
  </label>

  <input
    type="tel"
    name="address[phone]"
    id="AddressPhone_{{ form.id }}"
    value="{{ form.phone }}"
    class="w-full focus:outline-none customer_border_color"
  >
</div>

<div class="mb-4 sm:mb-6">
  <label for="address_form_{{ form.id }}" class="checkbox customer_text_color tracking-wider">
    <input type="checkbox" name="address[default]" id="address_form_{{ form.id }}" value="1" {% if customer.default_address == blank %}checked{% endif %}>
    {{ 'customer.addresses.set_as_default_address' | t }}
  </label>
</div>

<div class="flex flex-col md:flex-row justify-between md:items-center">
  <div class="flex flex-col md:flex-row gap-3 md:gap-4">
    <button 
      type="submit"
      class="customer_button_color customer_button_border px-5 py-2 tracking-wider">
      {% if form.id %}
        {{ 'action.update_address' | t }}
      {% else %}
        {{ 'action.add_new_address' | t }}
      {% endif %}
    </button>

    <button
      type="reset"
      x-on:click="new_address = false"
      class="customer_button_border px-5 py-2 tracking-wider"
    >
      {{ 'action.cancel' | t }}
    </button>
  </div>

  <div class="text-sm text-gray-600 mt-8 md:mt-0 customer_point_color tracking-wider">
    * {{ 'form.required' | t }}
  </div>
</div>