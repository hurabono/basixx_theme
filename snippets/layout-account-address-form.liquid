<!-- city country province -->
<div class="flex flex-wrap md:flex-nowrap md:gap-x-6">
  <div class="w-full md:w-1/3 mb-4 sm:mb-6">
    <label
      for="AddressCity_{{ form.id }}"
      class="block customer_text_color tracking-wider"
    >
      {{ 'form.city' | t }}*
    </label>

    <input
      type="text"
      name="address[city]"
      id="AddressCity_{{ form.id }}"
      value="{{ form.city }}"
      class="w-full focus:outline-none customer_border_color"
      required
    >
  </div>

  <div class="w-full md:w-1/3 mb-4 sm:mb-6">
    <label
      for="address_country_{{ form.id }}"
      class="block customer_text_color tracking-wider"
    >
      {{ 'form.country' | t }}*
    </label>

    <select
      name="address[country]" 
      id="address_country_{{ form.id }}"
      value="{{ form.country }}"
      data-country-selector
      data-id="{{ form.id }}"
      class="w-full h-12  px-3 py-2 customer_border_color"
      required
    >
      {{ all_country_option_tags }}
    </select>
  </div>

  <div class="w-full md:w-1/3 mb-4 sm:mb-6">
    <label
      for="address_province_{{ form.id }}"
      class="block customer_text_color tracking-wider"
    >
      Province
    </label>

    <select
      name="address[province]" 
      id="address_province_{{ form.id }}"
      value="{{ form.province }}"
      class="w-full h-12 customer_border_color px-3 py-2"
    >
    </select>
  </div>
</div>

<div class="mb-4 sm:mb-6">
  <label
