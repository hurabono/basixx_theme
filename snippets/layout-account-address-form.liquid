<div class="flex flex-wrap md:flex-nowrap md:gap-x-6">
  <div class="w-full md:w-1/2 mb-4 sm:mb-6">
    <label
      for="ContactFormFirstName_{{ form.id }}"
      class="block customer_text_color tracking-wider"
    >
      {{ 'form.first_name' | t }}*
    </label>

    <input
      type="text"
      name="address[first_name]"
      id="ContactFormFirstName_{{ form.id }}"
      value="{{ form.first_name }}"
      class="w-full focus:outline-none customer_border_color"
      required
    >
  </div>

