{% case media.media_type %}
      {% when 'image' %}
            <img 
              src="{{ media | image_url: width: 480, height: 480 }}" 
              alt="{{ media.preview_image.alt }}" 
              class="w-full h-full rounded-sm object-cover object-center"
              loading="lazy"
              width="{{ media.width }}"
              height="{{ media.height }}"
              >
      {% when 'external_video' %}
            {{ media | external_video_tag: class: 'w-full h-80 object-cover' }}

      {% when 'video' %}
            {{ media | video_tag: controls: true, class: 'w-full h-full object-cover object-center' }}
      
      {% when 'model' %}
            {{ media | model_viewer_tag }}
      
      {% else %}
      
            {{ media | media_tag }}
            
{% endcase %}